{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es7",
      "es2015",
      "es2016"
    ],
    "declaration": true,
    "outDir": "./src/dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "core-js"
    ]
  }
}