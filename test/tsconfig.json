{
  "include": [
    "../lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "spec"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es7",
      "esnext.asynciterable",
      "es2015",
      "es2016"
    ],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "mocha",
      "core-js"
    ]
  }
}
